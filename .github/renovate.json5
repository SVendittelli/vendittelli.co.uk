{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', ':semanticCommitTypeAll(chore)'],
  packageRules: [
    {
      matchDepTypes: ['devDependencies'],
      automerge: true,
    },
    {
      matchUpdateTypes: ['minor', 'patch', 'pin', 'digest'],
      automerge: true,
    },
  ],
}
